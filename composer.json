{
    "name": "kkt/gostishka",
    "description": "Пиццерия на PHP с использованием MVC",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tempo\\": "tempo/"
        }
    },
    "scripts": {
